#!/bin/sh -e
case "$1" in
/*) ACMEVIMDIR="$1" ;;
?*) ACMEVIMDIR="$ACMEVIMDIR/$1" ;;
esac
[ -d "$ACMEVIMDIR" ] || ACMEVIMDIR="$(dirname "$ACMEVIMDIR")"
[ -d "$ACMEVIMDIR" ]
if [ "${0##*/}" = "Dir" ]; then
	[ -n "$1" -o "$ACMEVIMFILE" = guide ] && ACMEVIMFILE=''
	[ -n "$ACMEVIMFILE" ] && avim -l '\<' "${ACMEVIMFILE%.*}" '\>'
	exec avim -o "$ACMEVIMDIR"
else
	cd "$ACMEVIMDIR"
	[ $# -gt 0 ] && shift
	exec avim -s "$(echo "a${0##*/}" | tr '[[:upper:]]' '[[:lower:]]')" "$@"
fi
